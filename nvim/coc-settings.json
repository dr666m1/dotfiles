{
  "coc.preferences.formatOnSaveFiletypes": ["rust", "go"],
  "snippets": {
    "loadFromExtensions": false
  },
  "languageserver": {
    "bigquery": {
      "command": "bq-language-server",
      "args": ["--stdio"],
      "filetypes": ["bigquery"],
      "settings": {
        "bqExtensionVSCode": {
          "diagnostic": {
            "forVSCode": false,
            "dryRunOnSave": true
          }
        }
      }
    },
    // https://github.com/golang/tools/blob/master/gopls/doc/vim.md
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  }
}
